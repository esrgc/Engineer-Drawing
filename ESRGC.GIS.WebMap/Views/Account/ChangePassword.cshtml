@model ESRGC.GIS.WebMap.Models.ChangePasswordModel
@{
    ViewBag.Title = "Salisbury City - Change Password";
}
<div class="mainContainer container-fluid">
    <div class="row-fluid">
        <!--Navigation-->
        <div class="span3">
            @Html.Partial("adminNavPartial", new ViewDataDictionary() { { "changePasswordCss", "active" } })
        </div>
        <!--Page content-->
        <div class="span9">
            <section id="Home">
                <ul class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Admin")">Home</a> <span class="divider">/</span></li>
                    <li><a href="@Url.Action("Index", "Account")">Membership</a> <span class="divider">/</span></li>
                    <li class="active">Change Password</li>
                </ul>
                <p>
                </p>
                <div class="well">
                    @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class="form-horizontal"})) {
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <legend>Change Password</legend>
                            <div class="control-group">
                                <label class="control-label" for="OldPassword">Current Password</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.OldPassword)
                                    @Html.ValidationMessageFor(model => model.OldPassword, null, new { @class = "help-inline" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="NewPassword">New Password</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.NewPassword)
                                    @Html.ValidationMessageFor(model => model.NewPassword, null, new { @class = "help-inline" })
                                </div>
                            </div>
                            <div class="control-group">
                                <label class="control-label" for="ConfirmPassword">Confirm Password</label>
                                <div class="controls">
                                    @Html.EditorFor(model => model.ConfirmPassword)
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "help-inline" })
                                </div>
                            </div>
                            <div class="form-actions">
                                <input type="submit" value="Change" class="btn btn-primary"/>
                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn"})
                            </div>
                        </fieldset>
                    }
                </div>
            </section>
        </div>
    </div>
</div>
